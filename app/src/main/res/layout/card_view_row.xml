<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/CardViewStyle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
                <ImageView
                    android:id="@+id/card_view_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />
                <LinearLayout
                    style="@style/CardViewTextLinearLayoutStyle">
                    <TextView
                        android:id="@+id/card_view_text"
                        style="@style/CardViewTextStyle" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/cardViewButtonsBackgroundColor"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/card_view_buttons_layout_padding_left_right"
                android:paddingRight="@dimen/card_view_buttons_layout_padding_left_right">
                <ImageButton
                    android:id="@+id/card_view_place_button"
                    style="@style/CardViewButtonsStyle"
                    android:src="@drawable/place"
                    tools:ignore="ContentDescription"/>
                <ImageButton
                    android:id="@+id/card_view_web_button"
                    style="@style/CardViewButtonsStyle"
                    android:src="@drawable/web"
                    tools:ignore="ContentDescription"/>
                <ImageButton
                    android:id="@+id/card_view_mail_button"
                    style="@style/CardViewButtonsStyle"
                    android:src="@drawable/email"
                    tools:ignore="ContentDescription"/>
                <ImageButton
                    android:id="@+id/card_view_phone_button"
                    style="@style/CardViewButtonsStyle"
                    android:src="@drawable/phone"
                    tools:ignore="ContentDescription"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>